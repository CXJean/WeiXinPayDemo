<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="lv.mama.lv.com.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="微信支付订单"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="22sp"
        android:textColor="#1145cd" />
    <Button
        style="@style/activity_button"
        android:text="提交订单"
        android:id="@+id/bt_submit_order"
        />
    <Button style="@style/activity_button"
        android:text="确认支付"
        android:id="@+id/bt_corfirm"/>
    <TextView
        android:id="@+id/tv_prepay_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    </TextView>

</LinearLayout>
